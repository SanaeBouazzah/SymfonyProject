{% block body %}
	<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
		<a class="navbar-brand ps-3" href="index.html">Start Bootstrap</a>
		<button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
			<i class="fas fa-bars"></i>
		</button>
		{% if is_granted('ROLE_ADMIN') %}
			<form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
				<div class="input-group">
					<input class="form-control" type="text" placeholder="Search for Users..." aria-label="Search for..." aria-describedby="btnNavbarSearch"/>
					<button class="btn btn-primary" id="btnNavbarSearch" type="button" id="">
						<i class="fas fa-search"></i>
					</button>
				</div>
			</form>
		{% endif %}

		<ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
			<li style="display:flex;align-items:center; padding:0 10px;">
				<button type="button" class="position-relative" style="background:transparent;border:none; outline:none; cursor:pointer;">
					<i class="fa-solid fa-bell" style="color:white;"></i>
					<span class="position-absolute top-1 mt-1 start-100 translate-middle badge rounded-pill bg-danger">
						0+
						<span class="visually-hidden">unread messages</span>
					</span>
				</button>
			</li>
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
					<i class="fas fa-user fa-fw"></i>
				</a>
				<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
					<li>
						<a class="dropdown-item" href="#!">Settings</a>
					</li>
					<li>
						<a class="dropdown-item" href="#!">Activity Log</a>
					</li>
					<li><hr class="dropdown-divider"/></li>
					<li>
						<form method="post">
							{% if app.user %}
								<a type="button" class="dropdown-item" href="{{ path('app_logout') }}">
									<i class="fa-solid fa-right-to-bracket"></i>Logout</a>
							{% endif %}
						</form>
					</li>
				</ul>
			</li>
		</ul>
	</nav>
</div>{% endblock %}
