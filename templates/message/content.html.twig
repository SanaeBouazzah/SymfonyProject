{% if app.user.id == message.author.id %}
	<p class="message small py-2 px-3 mx-3 rounded-5 test-start" style="width:fit-content;
					      background:#D9FDD3; color white;" data-bs-toggle="tooltip" data-bs-title="{{message.createdAt|date('d/m/Y H:i')}}">
		{{message.content}}
		<span style="font-size:10px; margin-left:20px;">{{message.createdAt|date('H:i')}}</span</p>
	{% else %}
		<p class="message message-end small py-2 px-3 mx-1 rounded-5" style="width:fit-content; background-color:black; color:white;" data-bs-toggle="toolip" data-bs-title="{{message.createdAt|date('d/m/Y H:i')}}">{{message.content}}
			<span style="font-size:10px; margin-left:20px;">{{message.createdAt|date('H:i')}}</span>
		</p>
	{% endif %}
